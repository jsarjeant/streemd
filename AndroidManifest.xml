<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.streemd"
    android:versionCode="1"
    android:versionName="1.0" > 
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/playbutton"
        android:label="@string/app_name" 
        android:name="StreemdApplication">
        <activity
            android:name="com.example.streemd.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
        <activity
            android:name="com.example.streemd.SignInActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.streemd.SignUpActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity> 
    </application>

</manifest>
